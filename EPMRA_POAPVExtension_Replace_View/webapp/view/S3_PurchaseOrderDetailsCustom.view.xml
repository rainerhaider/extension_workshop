<mvc:View id="detailsView" controllerName="nw.epm.refapps.ext.po.apv.controller.S3_PurchaseOrderDetails" xmlns="sap.m"
	xmlns:form="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:core="sap.ui.core">
	<Page id="detailsPage" title="{i18n>xtit.detailTitle}" showNavButton="{device>/system/phone}" navButtonPress="onNavBack">
		<content>
			<form:SimpleForm id="poHeaderForm" title="{i18n>xtit.formTitle}" layout="ResponsiveGridLayout" minWidth="1024" maxContainerCols="2"
				class="sapUiForceWidthAuto sapUiResponsiveMargin" labelSpanL="3" labelSpanM="3" emptySpanL="5" emptySpanM="5" columnsL="1" columnsM="1">
				<Label id="poIdFormLabel" text="{/#PurchaseOrder/POId/@sap:label}"/>
				<Text id="poIdForm" text="{POId}"/>
				<Label id="deliveryDateFormLabel" text="{/#PurchaseOrder/DeliveryDateEarliest/@sap:label}"/>
				<Text id="deliveryDateForm"
					text="{parts:[{path: 'DeliveryDateEarliest'}, {path: 'LaterDelivDateExist'}], formatter: '.formatter.deliveryDateAndLater' }"/>
				<Label id="addressFormLabel" text="{/#PurchaseOrder/DeliveryAddress/@sap:label}"/>
				<Text id="addressForm" text="{DeliveryAddress}"/>
			</form:SimpleForm>
			
			<List items="{path: 'PurchaseOrderItems', parameters: {select: 'POId,POItemPos,Product,Price,PriceCurrency,GrossAmount,GrossAmountCurrency,Quantity,DeliveryDate'}}">
				<items>
					<ObjectListItem
						title="{Product}" press="onItemSelect"
						number="{path: 'Price', formatter: '.formatter.amountWithOutCurrency'}" numberUnit="{CurrencyCode}">
						<secondStatus>
							<ObjectStatus id="deliveryDate" text="{path:'DeliveryDate', formatter: '.formatter.deliveryDate' }" />
						</secondStatus>
						<attributes>
							<ObjectAttribute id="dummyStatus"/>
							<ObjectAttribute id="grossAmount" text="{path: 'GrossAmountCurrency'}" />
						</attributes>
					</ObjectListItem>
				</items>	
			</List>
		
		</content>
		<footer>
			<OverflowToolbar id="footerToolbar">
				<ToolbarSpacer id="footerToolbarSpacer"/>
				<Button id="approveButton" type="Accept" text="{i18n>xbut.approve}" press="onApprovalButtonPressed"/>
				<Button id="rejectButton" type="Reject" text="{i18n>xbut.reject}" press="onApprovalButtonPressed"/>
				<Button id="shareButton" icon="sap-icon://action" press="onShareButtonPressed">
					<dependents>
						<ActionSheet id="shareSheet" showCancelButton="true" placement="Top">
							<buttons>
								<Button id="shareEmail" icon="sap-icon://email" text="{i18n>xbut.email}" press="onShareEmailPressed"/>
								<footerbar:AddBookmarkButton id="shareTile" appData="{ path: 'viewProperties>/saveAsTileTitle', formatter: '.formatter.appDataForTile' }"/>
							</buttons>
						</ActionSheet>
					</dependents>
				</Button>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>